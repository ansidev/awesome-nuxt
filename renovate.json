{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    },
    {
      "groupName": "vuepress",
      "matchPackageNames": [
        "vuepress"
      ],
      "matchPackagePrefixes": [
        "@vuepress/"
      ]
    }
  ]
}
